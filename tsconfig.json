{
    "compilerOptions": {
      "outDir": "build",
      "target": "es5",
      "lib": ["es6", "dom", "es2016", "es2017"],
      "module": "commonjs",
      "allowJs": false,
      "removeComments": true,
      "declaration": false,
      "sourceMap": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": false,
      "noImplicitThis": false,
      "noImplicitAny": false,
      "strictNullChecks": false,
      "suppressImplicitAnyIndexErrors": false,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "jsx": "react",
      "typeRoots": [
        "index.d.ts",
        "node_modules/@types"
      ]
    },
    "include": [
      "./src/**/*.tsx",
      "./src/**/*.ts", "index.d.ts"
    ],
    "exclude": [
      "node_modules",
      "build",
      "src/**/*.stories.tsx",
      "src/**/*.test.tsx"
    ]
  }