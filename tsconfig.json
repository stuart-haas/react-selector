{
    "compilerOptions": {    
      "outDir": "build",
      "target": "es5",
      "lib": ["es6", "dom", "es2016", "es2017"],
      "module": "commonjs",
      "moduleResolution": "node",
      "jsx": "react",
      "declaration": true,
      "removeComments": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "./src/**/*.tsx",
      "./src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "build",
      "src/**/*.stories.tsx",
      "src/**/*.test.tsx"
    ]
  }